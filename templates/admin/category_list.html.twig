{% extends "admin/base.html.twig" %}

{% block main %}

	<table>

		<thead>

			<tr>

				<td>Nom</td>
				<td>Description</td>
				<td>Modifier</td>
				<td>Supprimer</td>

			</tr>

		</thead>

		<tbody>

			{% for category in categories %}
				<tr>
					<td>
						<a href="{{ path('admin_show_category', {'id' : category.id } ) }}">{{ category.name }}</a>
					</td>
					<td>{{ category.description }}</td>
					<td>
						<a href="{{ path('admin_update_category', {'id' : category.id } ) }}">Modifier la catégorie</a>
					</td>
					<td>
						<a href="{{ path('admin_delete_category', {'id' : category.id}) }}">Supprimer la catégorie</a>
					</td>
				</tr>
			{% endfor %}

		</tbody>

	</table>

	<a href="{{ path('admin_create_category') }}">Créer une catégorie</a>

	<h3>{{ admin }}</h3>

{% endblock %}
